{{#if model.workSites}}
	<h4>Work sites</h4>
	<ul class="test-sites-list">
	{{#each model.workSites as |site|}}
		<li>
			{{link-to site.name 'disasters.edit.site' site.id class='test-work-site-link site'}}
			<span class="badge-success test-work-site-checkins">{{if site.hasCheckins site.checkins.length "-"}}</span>
		</li>
	{{/each}}
	</ul>
	{{link-to 'Add another work site' 'disasters.edit.new' model class="test-disaster-create-work-site"}}
{{else}}
	{{link-to 'Create first work site' 'disasters.edit.new' model class="test-disaster-create-work-site"}}
{{/if}}
{{roster-uploader}}
{{link-to 'Check in' 'disasters.edit.checkin' model class='test-disaster-checkin'}}